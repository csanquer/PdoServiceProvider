{
    "name": "csanquer/pdo-service-provider",
    "description": "a PDO database service provider for silex",
    "keywords": [
        "silex", "database", "pdo", "service provider"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Charles Sanquer",
            "email": "charles.sanquer@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "silex/silex": "~1.1",
        "symfony/options-resolver": "~2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.1"
    },
    "autoload": {
        "psr-4": { 
            "CSanquer\\Silex\\PdoServiceProvider\\": "src/",
            "CSanquer\\Silex\\PdoServiceProvider\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    }
